<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@drawable/card"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/res_unit_isveg"
        android:src="@drawable/veg"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/res_unit_name"
        android:text="Unitname"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_green"
        android:textSize="13dp"
        android:textStyle="bold"
        android:id="@+id/res_unit_price"
        android:text="₹150"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_text"
        android:textSize="12dp"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        android:id="@+id/res_unit_offer"
        android:text="₹180"/>

    <FrameLayout
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginStart="25dp"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/input_green"
            android:id="@+id/res_unit_qtyview"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:id="@+id/res_unit_minus"
                android:src="@drawable/ic_minus"
                android:background="@drawable/btn_trans_og"
                android:clickable="true"
                android:layout_marginEnd="3dp"
                android:padding="7dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="1"
                android:id="@+id/res_unit_qty"
                android:gravity="center"
                android:textSize="12dp"/>



            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:id="@+id/res_unit_add"
                android:background="@drawable/btn_trans_og"
                android:clickable="true"
                android:src="@drawable/ic_add"
                android:padding="7dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:background="@drawable/btn"
            android:id="@+id/res_unit_addbtn"
            android:gravity="center"
            android:padding="0dp"
            android:text="ADD"
            android:textStyle="bold"
            android:textColor="@color/white"/>


        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="6dp"
            android:visibility="gone"
            android:id="@+id/res_pro_unit_loader"
            android:indeterminateTint="@color/white"
            android:background="@drawable/btn"/>

    </FrameLayout>

</LinearLayout>