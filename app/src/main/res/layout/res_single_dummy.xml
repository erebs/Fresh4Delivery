<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_height="140dp">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginBottom="10dp"
      android:orientation="horizontal">

      <androidx.cardview.widget.CardView
          android:layout_width="120dp"
          android:layout_height="match_parent"
          android:elevation="0dp"
          android:layout_marginEnd="10dp"
          app:cardCornerRadius="18dp">

          <ImageView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/grey_text"
              android:id="@+id/shop_image"
              android:scaleType="centerCrop"
              android:src="@drawable/ph_bnnr" />

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#14000000"
              android:orientation="vertical"/>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="bottom"
              android:visibility="gone"
              android:padding="10dp"
              android:id="@+id/shop_notact"
              android:background="@drawable/black_grad"
              android:orientation="vertical">


              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="CLOSED"
                  android:textColor="#D1D1D1"
                  android:textSize="16dp"
                  android:textStyle="bold" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="FOR DELIVERY"
                  android:layout_marginTop="-3dp"
                  android:textColor="#D1D1D1"
                  android:textSize="12dp"
                  android:textStyle="normal" />


          </LinearLayout>

      </androidx.cardview.widget.CardView>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center|left"
          android:layout_margin="5dp"
          android:orientation="vertical">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="13dp"
              android:text="restaurants near you"
              android:lines="1"
              android:textColor="@color/grey_text"
              android:background="@color/grey_text"
              android:textSize="16dp"
              android:textStyle="bold" />

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center|left"
              android:layout_marginTop="10dp"
              android:orientation="horizontal">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:drawableStart="@drawable/ic_star_fill"
                  android:drawableTint="@color/grey_text"
                  android:drawablePadding="5dp"
                  android:padding="5dp"
                  android:gravity="center"
                  android:id="@+id/shop_rating"
                  android:background="@drawable/sixcr_gray"
                  android:text="3.9"
                  android:textColor="@color/grey_text"
                  android:textSize="12dp"
                  android:textStyle="bold" />

              <View
                  android:layout_width="1dp"
                  android:layout_height="12dp"
                  android:layout_marginStart="7dp"
                  android:layout_marginEnd="7dp"
                  android:background="@color/grey_text" />

              <TextView
                  android:layout_width="100dp"
                  android:layout_height="11dp"
                  android:text="restaurants near you"
                  android:lines="1"
                  android:textColor="@color/grey_text"
                  android:background="@color/grey_text"
                  android:textSize="16dp"
                  android:textStyle="bold" />

          </LinearLayout>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="8dp"
              android:text="restaurants near you"
              android:lines="1"
              android:layout_marginEnd="30dp"
              android:layout_marginTop="10dp"
              android:textColor="@color/grey_text"
              android:background="@color/grey_text"
              android:textSize="16dp"
              android:textStyle="bold" />

          <TextView
              android:layout_width="match_parent"
              android:layout_height="8dp"
              android:text="restaurants near you"
              android:lines="1"
              android:layout_marginEnd="70dp"
              android:layout_marginTop="10dp"
              android:textColor="@color/grey_text"
              android:background="@color/grey_text"
              android:textSize="16dp"
              android:textStyle="bold" />

      </LinearLayout>

  </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/shop_click"
        android:clickable="true"/>

</com.facebook.shimmer.ShimmerFrameLayout>