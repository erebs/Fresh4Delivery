<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#eee">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/his_image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/res_pro_placeholder"
                    android:background="@color/grey_text"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:id="@+id/items_shop"
                    android:textSize="14dp"
                    android:text="New Sana Restaurant"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#A15B5B5B"
                    android:id="@+id/items_ads"
                    android:textSize="12dp"
                    android:text="New Sana Restaurant"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#A15B5B5B"
                    android:id="@+id/items_dtime"
                    android:textSize="10dp"
                    android:text="New Sana Restaurant"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:id="@+id/items_sts"
                    android:background="@drawable/sixcr_lite"
                    android:padding="8dp"
                    android:text="Out for Delivery"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/dark_green"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/items_vagain"
                    android:textSize="12dp"
                    android:text="Visit again"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:textColor="#A15B5B5B"
                    android:id="@+id/items_time"
                    android:gravity="right"
                    android:textSize="12dp"
                    android:text="New Sana Restaurant"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#60CACACA" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/items_array"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#60CACACA" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingRight="15dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="15dp"
        android:gravity="center|left"
        android:orientation="horizontal">


        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#A15B5B5B"
            android:textSize="12dp"
            android:text="Delivery Charge"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold"
            android:id="@+id/items_dcharge"
            android:text="New Sana Restaurant"/>


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="15dp"
            android:layout_marginTop="3dp"
            android:paddingLeft="15dp"
            android:gravity="center|left"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#A15B5B5B"
                android:textSize="12dp"
                android:text="Taxes and Charges"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold"
                android:id="@+id/items_tax"
                android:text="New Sana Restaurant"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="15dp"
            android:paddingLeft="15dp"
            android:gravity="center|left"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#A15B5B5B"
                android:textSize="14dp"
                android:text="Grand Total"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:id="@+id/items_amt"
                android:textStyle="bold"
                android:text="New Sana Restaurant"/>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginTop="-15dp"
            android:id="@+id/items_cview"
            android:orientation="horizontal"
            android:gravity="right|center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:id="@+id/items_cBtn"
                android:textStyle="bold"
                android:background="@drawable/sixcr_fail"
                android:padding="8dp"
                android:text="Cancel Order"/>

        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>