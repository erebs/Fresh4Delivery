<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/card_border"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="110dp"
            android:id="@+id/res_pro_image"
            android:layout_margin="2dp"
            android:src="@drawable/res_pro_placeholder"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                android:id="@+id/res_pro_name"
                android:text="Prodcut Name"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/input_hint"
                android:textSize="12dp"
                android:id="@+id/res_pro_isavailable"
                android:text="Available"/>

        </LinearLayout>



        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:layout_gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/input_green"
                android:id="@+id/res_pro_qtyview"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:id="@+id/res_pro_minus"
                    android:src="@drawable/ic_minus"
                    android:background="@drawable/btn_trans_og"
                    android:clickable="true"
                    android:layout_marginEnd="3dp"
                    android:padding="7dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="1"
                    android:id="@+id/res_pro_qty"
                    android:gravity="center"
                    android:textSize="12dp"/>



                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:id="@+id/res_pro_add"
                    android:background="@drawable/btn_trans_og"
                    android:clickable="true"
                    android:src="@drawable/ic_add"
                    android:padding="7dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:background="@drawable/btn"
                android:id="@+id/res_pro_addbtn"
                android:gravity="center"
                android:padding="0dp"
                android:text="ADD"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:background="@drawable/btn_green"
                android:id="@+id/res_pro_modify"
                android:gravity="center"
                android:padding="0dp"
                android:text="Modify"
                android:textStyle="bold"
                android:textColor="@color/lite_green"/>

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="6dp"
                android:visibility="gone"
                android:id="@+id/res_pro_add_loader"
                android:indeterminateTint="@color/white"
                android:background="@drawable/btn"/>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_green"
            android:textSize="13dp"
            android:textStyle="bold"
            android:id="@+id/res_pro_price"
            android:text="₹150"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_text"
            android:textSize="12dp"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:id="@+id/res_pro_offer"
            android:text="₹180"/>


    </LinearLayout>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/veg"
        android:id="@+id/res_pro_isveg"
        android:layout_marginTop="16dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="right|top"/>


</FrameLayout>