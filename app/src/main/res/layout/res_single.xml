<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_height="140dp">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginBottom="10dp"
      android:orientation="horizontal">

      <androidx.cardview.widget.CardView
          android:layout_width="120dp"
          android:layout_height="match_parent"
          android:elevation="0dp"
          android:layout_marginEnd="10dp"
          app:cardCornerRadius="18dp">

          <ImageView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/grey_text"
              android:id="@+id/shop_image"
              android:scaleType="centerCrop"
              android:src="@drawable/ph_bnnr" />

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#14000000"
              android:orientation="vertical"/>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="bottom"
              android:visibility="gone"
              android:padding="10dp"
              android:id="@+id/shop_notact"
              android:background="@drawable/black_grad"
              android:orientation="vertical">


              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="CLOSED"
                  android:textColor="#D1D1D1"
                  android:textSize="16dp"
                  android:textStyle="bold" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="FOR DELIVERY"
                  android:layout_marginTop="-3dp"
                  android:textColor="#D1D1D1"
                  android:textSize="12dp"
                  android:textStyle="normal" />


          </LinearLayout>

      </androidx.cardview.widget.CardView>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center|left"
          android:layout_margin="5dp"
          android:orientation="vertical">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="restaurants near you"
              android:id="@+id/shop_name"
              android:lines="1"
              android:textColor="@color/black"
              android:textSize="16dp"
              android:textStyle="bold" />

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center|left"
              android:layout_marginTop="6dp"
              android:orientation="horizontal">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:drawableStart="@drawable/ic_star_fill"
                  android:drawablePadding="5dp"
                  android:padding="5dp"
                  android:gravity="center"
                  android:id="@+id/shop_rating"
                  android:background="@drawable/bg_grad_card_cur_less"
                  android:text="3.9"
                  android:textColor="@color/black"
                  android:textSize="12dp"
                  android:textStyle="bold" />

              <View
                  android:layout_width="1dp"
                  android:layout_height="12dp"
                  android:layout_marginStart="7dp"
                  android:layout_marginEnd="7dp"
                  android:background="@color/grey_text" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="30 Mintueis"
                  android:textColor="@color/black"
                  android:id="@+id/shop_dtime"
                  android:textSize="13dp"
                  android:textStyle="bold" />

          </LinearLayout>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:text="Ponnukara Thrissur Kerala"
              android:lines="2"
              android:textColor="#81000000"
              android:id="@+id/shop_des"
              android:textSize="14dp"
              android:textStyle="normal" />

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/shop_actbox"
              android:visibility="gone"
              android:orientation="vertical">

              <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_marginEnd="20dp"
                    android:layout_marginTop="5dp"
                  android:layout_marginBottom="5dp"
                  android:background="#63B7B7B7" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Opens at 10 AM"
                  android:lines="1"
                  android:id="@+id/shop_acttext"
                  android:textColor="@color/grey_text"
                  android:textSize="15dp"
                  android:textStyle="bold" />

          </LinearLayout>

      </LinearLayout>

  </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/shop_click"
        android:clickable="true"/>

</FrameLayout>